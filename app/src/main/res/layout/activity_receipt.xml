<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Receipt">

    <ScrollView
        android:layout_width="602px"
        android:layout_height="2400px"
        app:layout_constraintEnd_toEndOf="@+id/imageView"
        app:layout_constraintHorizontal_bias="0.505"
        app:layout_constraintStart_toStartOf="@+id/imageView"
        tools:layout_editor_absoluteY="196dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="-331dp"
                app:srcCompat="@drawable/front" />

            <TextView
                android:id="@+id/resultCode2"
                android:layout_width="50dp"
                android:layout_height="20dp"
                android:layout_marginTop="-800dp"
                android:layout_marginLeft="480px"
                android:fontFamily="sans-serif"
                android:text="11247"
                android:textColor="#505050"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/resultCode"
                android:layout_width="50dp"
                android:layout_height="20dp"
                android:layout_marginTop="177dp"
                android:layout_marginLeft="340px"
                android:fontFamily="sans-serif"
                android:text="11247"
                android:textColor="#505050"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/resultDate"
                android:layout_width="80dp"
                android:layout_height="20dp"
                android:layout_marginTop="19dp"
                android:layout_marginLeft="418px"
                android:fontFamily="sans-serif"
                android:text="11.05.2022"
                android:textColor="#505050"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/resultTime"
                android:layout_width="70dp"
                android:layout_height="20dp"
                android:layout_marginLeft="447px"
                android:fontFamily="sans-serif"
                android:text="11:02:52"
                android:textColor="#505050"
                android:textSize="12sp" />
        </LinearLayout>
    </ScrollView>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:elevation="10dp">
        <RelativeLayout
            android:id="@+id/receipt_close_btn"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="22dp"/>
        <RelativeLayout
            android:id="@+id/receipt_qr_btn"
            android:layout_width="100dp"
            android:layout_height="90dp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="40dp"
            android:layout_marginBottom="10dp">

        </RelativeLayout>
    </RelativeLayout>
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/back" />


</androidx.constraintlayout.widget.ConstraintLayout>