<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Replenish">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#f2f2f2">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="#fff"
            android:paddingLeft="20dp">
            <RelativeLayout
                android:id="@+id/mybank_line_back"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="@drawable/ic_baseline_west_24"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Пополнить Kaspi Gold"
                android:layout_toEndOf="@+id/mybank_line_back"
                android:layout_centerVertical="true"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="#000"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_marginTop="70dp"
            android:background="#fff"
            android:paddingTop="50dp"
            android:paddingBottom="50dp">
            <EditText
                android:id="@+id/edit_text"
                android:layout_width="200dp"
                android:layout_height="60dp"
                android:inputType="number"
                android:hint="Введите сумму"
                android:textColorHint="#000"
                android:textColor="#000"
                android:layout_centerHorizontal="true">
            </EditText>
            <Button
                android:id="@+id/replenish_btn_repl"
                android:layout_width="200dp"
                android:layout_height="60dp"
                android:background="#ff4431"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                android:text="Пополнить"
                android:textSize="18sp">

            </Button>
        </RelativeLayout>
    </RelativeLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>