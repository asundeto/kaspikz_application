<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <include layout="@layout/fixed"/>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#f2f2f2">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="70dp">
                <include layout="@layout/horizontal_rassrochka"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="350dp"
                android:background="@drawable/kaspi_main_main"
                android:layout_marginTop="10dp">
                <RelativeLayout
                    android:id="@+id/main_to_qr_sec"
                    android:layout_width="75dp"
                    android:layout_height="60dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="15dp"/>
                <RelativeLayout
                    android:id="@+id/main_to_mybank"
                    android:layout_width="75dp"
                    android:layout_height="60dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="115dp"/>
                <RelativeLayout
                    android:id="@+id/main_to_payments"
                    android:layout_width="75dp"
                    android:layout_height="60dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="220dp"/>
                <RelativeLayout
                    android:id="@+id/main_to_trans"
                    android:layout_width="90dp"
                    android:layout_height="60dp"
                    android:layout_marginTop="10dp"
                    android:layout_alignParentRight="true"/>
            </RelativeLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1650dp"
                android:background="@drawable/main_page"/>

            <RelativeLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="#fff"/>
        </LinearLayout>

    </ScrollView>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="@drawable/shadow"
        android:layout_gravity="bottom"
        android:layout_marginBottom="55dp"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_gravity="bottom"
        android:layout_centerHorizontal="true"
        android:background="@drawable/down_fixed">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="55dp"
            android:layout_centerHorizontal="true">
            <RelativeLayout
                android:layout_width="90dp"
                android:layout_height="55dp"
                android:id="@+id/main">
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="90dp"
                android:layout_height="55dp"
                android:layout_marginLeft="100dp"
                android:id="@+id/qr">
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="90dp"
                android:layout_height="55dp"
                android:layout_marginLeft="200dp"
                android:id="@+id/message">
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="90dp"
                android:layout_height="55dp"
                android:layout_marginLeft="310dp"
                android:id="@+id/services">
            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>


</androidx.coordinatorlayout.widget.CoordinatorLayout>