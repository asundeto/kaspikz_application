<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f2f2f2"
    tools:context=".Services">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="#fff"
            android:paddingLeft="20dp"
            android:elevation="10dp"
            tools:ignore="MissingConstraints"
            android:paddingRight="20dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Сервисы"
                android:layout_centerVertical="true"
                android:textColor="#000"
                android:textSize="18sp"/>
            <ImageView
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:background="@drawable/kz_rus"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"/>
        </RelativeLayout>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="60dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:background="#fff"
                    android:paddingLeft="20dp"
                    android:layout_marginBottom="10dp">
                    <ImageView
                        android:id="@+id/user_logo"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:background="@drawable/user_logo"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="20dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Алихан"
                        android:layout_toEndOf="@+id/user_logo"
                        android:textColor="#000"
                        android:textSize="16sp"
                        android:layout_marginTop="10dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Настройки"
                        android:layout_toEndOf="@+id/user_logo"
                        android:textColor="#949494"
                        android:layout_alignParentBottom="true"
                        android:layout_marginBottom="15dp"
                        android:textSize="12sp"/>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/ic_baseline_chevron_right_24"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="235dp"
                    android:background="@drawable/services_big_img">
                    <RelativeLayout
                        android:id="@+id/service_to_mybank_btn"
                        android:layout_width="110dp"
                        android:layout_height="80dp"
                        android:layout_centerHorizontal="true"/>
                    <RelativeLayout
                        android:id="@+id/service_to_payments_btn"
                        android:layout_width="110dp"
                        android:layout_height="80dp"
                        android:layout_alignParentRight="true"/>
                    <RelativeLayout
                        android:id="@+id/service_to_trans"
                        android:layout_width="130dp"
                        android:layout_height="80dp"
                        android:layout_marginTop="80dp"/>
                </RelativeLayout>
                <ImageView
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="235dp"
                    android:background="@drawable/partner_services"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:background="#f2f2f2"/>
            </LinearLayout>
        </ScrollView>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="@drawable/shadow"
        android:layout_gravity="bottom"
        android:layout_marginBottom="55dp"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_gravity="bottom"
        android:layout_centerHorizontal="true"
        android:background="@drawable/down_fixed_3">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="55dp"
            android:layout_centerHorizontal="true">
            <RelativeLayout
                android:layout_width="90dp"
                android:layout_height="55dp"
                android:id="@+id/main">
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="90dp"
                android:layout_height="55dp"
                android:layout_marginLeft="100dp"
                android:id="@+id/qr">
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="90dp"
                android:layout_height="55dp"
                android:layout_marginLeft="200dp"
                android:id="@+id/message">
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="90dp"
                android:layout_height="55dp"
                android:layout_marginLeft="310dp"
                android:id="@+id/services">
            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>


</androidx.coordinatorlayout.widget.CoordinatorLayout>