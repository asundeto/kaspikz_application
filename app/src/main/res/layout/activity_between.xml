<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f0f0f0"
    tools:context=".Between">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#fff"
        android:paddingLeft="20dp"
        android:elevation="10dp"
        tools:ignore="MissingConstraints">
        <ImageView
            android:id="@+id/lineToBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_west_24"
            android:layout_centerVertical="true"
            android:layout_marginRight="25dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@id/lineToBack"
            android:text="TRANSCARD. Город"
            android:textColor="#000"
            android:textSize="18sp"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:layout_marginTop="75dp"
        android:background="#fff"
        android:elevation="0dp"
        app:layout_constraintTop_toTopOf="parent">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Номер телефона"
            android:textColor="#949494"
            android:layout_marginTop="70dp"
            android:textSize="12sp"
            android:layout_marginLeft="20dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Код транспорта"
            android:textColor="#949494"
            android:layout_marginTop="100dp"
            android:layout_marginLeft="27dp"
            android:textSize="12sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+7 708 187 8471"
            android:textColor="#000"
            android:layout_marginTop="70dp"
            android:layout_marginLeft="150dp"
            android:textSize="12sp"/>
        <TextView
            android:id="@+id/resultCode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10000"
            android:textColor="#000"
            android:layout_marginTop="100dp"
            android:layout_marginLeft="150dp"
            android:textSize="12sp"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#cccaca"
            android:layout_alignParentBottom="true"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="245dp"
        android:background="#fff"
        android:elevation="0dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        app:layout_constraintTop_toTopOf="parent">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="К оплате"
            android:textColor="#000"
            android:layout_centerVertical="true"
            android:textSize="16sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="90,00 &#x20b8;"
            android:textColor="#000"
            android:layout_centerVertical="true"
            android:textSize="16sp"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="330dp"
        android:background="#fff"
        android:elevation="0dp"
        app:layout_constraintTop_toTopOf="parent">
        <ImageView
            android:layout_width="55dp"
            android:layout_height="40dp"
            android:background="@drawable/kaspi_gold_img"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kaspi Gold"
            android:textColor="#000"
            android:layout_marginLeft="95dp"
            android:layout_centerVertical="true"
            android:textSize="16sp"/>
        <TextView
            android:id="@+id/between_money_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="27267"
            android:textColor="#000"
            android:layout_centerVertical="true"
            android:textSize="16sp"
            android:layout_marginRight="60dp"/>
        <TextView
            android:id="@+id/between_money_count2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text=",57 &#x20b8;"
            android:textColor="#000"
            android:layout_centerVertical="true"
            android:textSize="16sp"
            android:layout_marginRight="20dp"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#cccaca"
            android:layout_alignParentBottom="true"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_marginTop="390dp"
        android:background="#fff"
        android:elevation="0dp"
        android:paddingLeft="20dp"
        app:layout_constraintTop_toTopOf="parent"
        android:paddingRight="20dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Потратить бонусы"
            android:textColor="#000"
            android:textSize="16sp"
            android:layout_marginTop="15dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Накоплено 68,7 Б"
            android:textColor="#949494"
            android:textSize="14sp"
            android:layout_marginTop="40dp"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_baseline_toggle_off_24"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="470dp"
        android:elevation="0dp"
        android:paddingLeft="20dp"
        app:layout_constraintTop_toTopOf="parent">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Комиссия 0 &#x20b8;"
            android:textSize="16sp"
            android:textColor="#949494"
            android:layout_marginTop="40dp"
            android:layout_centerHorizontal="true"/>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/between_btn"
            android:layout_width="370dp"
            android:layout_height="45dp"
            android:layout_marginTop="80dp"
            android:background="#0288d1"
            android:text="ПРОДОЛЖИТЬ"
            android:textSize="20dp"
            android:textColor="#fff"
            android:layout_centerHorizontal="true"/>
    </RelativeLayout>




</androidx.constraintlayout.widget.ConstraintLayout>