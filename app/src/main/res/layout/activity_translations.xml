<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Translations">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#f2f2f2"
        tools:ignore="MissingConstraints">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="570dp"
            android:background="@drawable/translations">
            <RelativeLayout
                android:id="@+id/back_btn_1"
                android:layout_width="70dp"
                android:layout_height="70dp"/>
            <RelativeLayout
                android:id="@+id/trans_btn_to_change_name"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_marginTop="170dp"/>
            <RelativeLayout
                android:id="@+id/trans_to_transclient"
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:layout_alignParentBottom="true"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="@drawable/shadow"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="55dp"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/down_fixed">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="55dp"
                android:layout_centerHorizontal="true">
                <RelativeLayout
                    android:layout_width="90dp"
                    android:layout_height="55dp"
                    android:id="@+id/main">
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="90dp"
                    android:layout_height="55dp"
                    android:layout_marginLeft="100dp"
                    android:id="@+id/qr">
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="90dp"
                    android:layout_height="55dp"
                    android:layout_marginLeft="200dp"
                    android:id="@+id/message">
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="90dp"
                    android:layout_height="55dp"
                    android:layout_marginLeft="310dp"
                    android:id="@+id/services">
                </RelativeLayout>
            </RelativeLayout>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/trans_appear_back"
            android:visibility="invisible"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#000"
            android:elevation="0dp"
            android:alpha="0.50">
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/trans_appear"
            android:visibility="invisible"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/radius_scanner"
            android:elevation="10dp"
            android:padding="20dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Change translation \n client name"
                android:textColor="#000"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:textSize="20sp"/>
            <EditText
                android:id="@+id/trans_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:hint="Введите имя"
                android:textColorHint="#000"
                android:textColor="#000"/>
            <Button
                android:id="@+id/trans_change_next_btn"
                android:layout_width="170dp"
                android:layout_height="50dp"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                android:text="ПРОДОЛЖИТЬ"/>
        </RelativeLayout>
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>