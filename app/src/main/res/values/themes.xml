<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.KASPIDEIMIN" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#ff4431</item>
        <item name="colorPrimaryVariant">#ff4431</item>
        <item name="colorOnPrimary">#fff</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/black</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">#fff</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">#949494</item>
        <!-- Customize your theme here. -->
    </style>

    <!-- SPLASH SCREEN -->
    <style name="SplashScreen" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowBackground">@drawable/background_splashscreen</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary</item>
    </style>
</resources>